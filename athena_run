#!/bin/bash
# Make sure this script is in the HOME directory.
# Make sure there is only one athinput file per directory!

athenaPath="/software/bwong24/Athena_Radiation-master"
OUT_Path="/home/bwong24/URS_Athena_CHTC"
cd $athenaPath
# configure
python configure.py --prob=ParkerInst -cr -b -hdf5 -mpi --include=/opt/homebrew/Cellar/hdf5/1.12.1 --hdf5_path=/opt/homebrew/Cellar/hdf5/1.12.1 > ../log_config.txt;
cd $OUT_Path;

for OUTdir in $(ls -d OUT*/)
do
	echo $OUTdir
	cd $OUTdir
	inputFile=$(ls athinput*)
	echo $(time (../$athenaPath/bin/athena -i $inputFile >log_run.txt))
	cd ..
done
